
 <%= form_for [topic, post] do |f| %>
  <% if post.errors.any? %>
    <div class="alert alert-danger">
      <h4>There <%= (post.errors.count == 1 ? "is " : "are ") + pluralize(post.errors.count, "error") %>.</h4>

      <ul>
        <% post.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <% end %>
  
      <%= simple_form_for([topic, post], html: { class: 'form-horizontal' })  do |f| %>                
          <%= f.input :title, placeholder: "Enter post title" %>
          <%= f.input :body, placeholder: "Enter post body" %>
          

      <% if post.image? %>
          <div class="form-group">
           <p>Current picture</p>
           <%= image_tag( post.image.thumb.url ) %>
         </div>

      <% end %>
           
           <div class="form-group">
             <%= f.label :image %>
             <%= f.file_field :image %>
             <%= f.hidden_field :image_cache %>
           </div>

          <div class="form-group">
            <%= f.button :submit, { class: 'btn btn-success' } %>
          </div>
          

  <% end %>




 